			<!---  *************************************************** script for adding authorities ************************************************ -->
			<script>
				function showConfirmA(callback){
					swal(
						{
							title: 'Well done!',
							text: 'Authorite created successfully!',
							type: 'success',
							// confirmButtonColor: '#57a94f'
						}
					)
					callback();
				}
				function redirectHomeA(){
					setTimeout( function(){
						const urlParams = new URLSearchParams(window.location.search);
			  			const referenceNumber = urlParams.get('ref');
						window.location.href="/admin/addadmin?ref="+referenceNumber;
					}, 1000)
				}
	
				$(document).ready(function() {
				  $('#myFormA').submit(function(e) {
					e.preventDefault(); // prevent form from submitting

					document.getElementById('typeU').disabled = false;

					var formData = new FormData(this);

					$.ajax({
					  url: '<%= url%>webAut/autorite/register',
					  type: 'POST',
					  processData: false,
   				 	  contentType: false,
					  data: formData,
					  //data: $(this).serialize(),
					  success: function(data) {
						showConfirmA(redirectHomeA);
					  },
					  error: function(xhr, status, error) {
						//console.log(xhr.responseText); // handle error response
						alert("Something went wrong");
					  }
					});
				  });
				});
			</script>

		<script>
			  function togglePasswordVisibility() {
			  var passwordInput = document.getElementById("password");
			  if (passwordInput.type === "password") {
				passwordInput.type = "text";
			  } else {
				passwordInput.type = "password";
			  }
			}
